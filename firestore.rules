rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to slots and messages
    // This is appropriate for an open mic signup app where anyone can view and sign up
    match /slots/{slotId} {
      allow read, write: if true;
    }
    
    match /messages/{messageId} {
      allow read, write: if true;
    }
    
    // Deny access to all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
